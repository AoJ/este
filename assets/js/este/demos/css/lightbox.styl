#gallery a
	display inline-block
	vertical-align top
	width 120px
	margin 10px
	padding 1px
	border solid 1px #ddd
	font-size 0px

	img
		width 100%

.este-ui-lightbox
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	z-index 1

	.este-ui-lightbox-disabled
		opacity .5

	.este-ui-lightbox-background
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		z-index -1
		background-color #000
		opacity .8

	.este-ui-lightbox-image
		position absolute
		left 10px
		right 10px
		top 10px
		bottom 50px
		text-align center

		img
			max-width 100%
			max-height 100%

	.este-ui-lightbox-sidebar
		position absolute
		left 10px
		right 10px
		bottom 0
		height 50px
		line-height 50px
		text-align center

		> *
			display inline-block

		.este-ui-lightbox-title
			position absolute
			right 10px
			top 0
			color #fff
			text-transform uppercase

		.este-ui-lightbox-current
		.este-ui-lightbox-buttons
		.este-ui-lightbox-buttons > *
			display inline-block
